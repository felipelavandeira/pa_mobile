<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="whiteEditText" parent="android:Widget.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/white</item>
    </style>

    <style name="buttonStyle" parent="android:Widget.Button">
        <item name="android:background">transparent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:strokeColor" tools:targetApi="lollipop">@color/white</item>
    </style>

</resources>
